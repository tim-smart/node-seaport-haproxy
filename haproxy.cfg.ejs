global
    nbproc       1
    maxconn      65536
    pidfile      /var/run/haproxy.pid
    stats socket /var/run/haproxy.socket

defaults
    timeout connect 5s
    timeout queue   5s
    timeout client  30s
    timeout server  30s
    timeout tunnel  1h

listen stats 0.0.0.0:9000
    mode http

    stats enable
    stats uri /haproxy
    stats realm HAProxy\ Statistics 
    stats auth admin:password
    stats admin if TRUE

frontend www
    bind            0.0.0.0:80
    timeout client  1h
    default_backend web_backend

backend web_backend
    balance roundrobin
    mode    http
    option  forwardfor
<% if (roles.web) roles.web.forEach(function (service, i) { %>
    server  <%= service.id %> <%= service.host %>:<%= service.port %> maxconn <%= maxconn %> weight 1 check
<% }) %>
